//
// Icons
// --------------------------------------------------

if $use-icons == true

  i
    if $use-animations == true
      transition(all linear 0.2s)

  // Initial Styles
  // ----------------------------
  [class^="icon-"],
    font-family: $font-name
    font-weight: normal
    font-style: normal
    text-decoration: inherit
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    if $legacy-support == true
      *margin-right: .3em
  [class^="icon-"]:before,
    text-decoration: inherit
    display: inline-block
    speak: none

  // makes sure icons active on rollover in links
  a
    [class^="icon-"],
      display: inline

  // increased font size for icon-large
  [class^="icon-"],
    &.icon-fixed-width
      display: inline-block
      width: (16em / 14)
      text-align: right
      padding-right: (4em / 14)
      &.icon-large
        width: (20em / 14)
  [class^="icon-"],
    &.hide
      display: none

  // Icon States
  // ----------------------------
  if $icons-states == true
    .icon-muted
      color: $icon-muted
    .icon-light
      color: $icon-light
    .icon-dark
      color: $icon-dark
    .icon-border
      border: solid 1px $icon-border
      padding: .2em .25em .15em
      border-radius(3px)

  // Icon Sizes
  // ----------------------------
  if $icons-sizes == true
    .icon-2x
      font-size: 2em
      &.icon-border
        border-width: 2px
        border-radius($icons-radius)
    .icon-3x
      font-size: 3em
      &.icon-border
        border-width: 3px
        border-radius($icons-radius + 2)
    .icon-4x
      font-size: 4em
      &.icon-border
        border-width: 4px
        border-radius($icons-radius + 3)
    .icon-5x
      font-size: 5em
      &.icon-border
        border-radius($icons-radius + 5)

  // Glyphos
  // ----------------------------

  font-face($font-name, $font-path)

