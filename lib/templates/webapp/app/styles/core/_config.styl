///////////////////////////////////////////////////////////////////////////////////////
//
// INITIAL CONFIGURATION
//
///////////////////////////////////////////////////////////////////////////////////////

// 1 - Would you like to use grid system classes (unsemantic way)?
$use-grid-classes = false

// 2 - Pick a type of grid - Accepted values: "fluid", "static"
$use-grid-type = "fluid"

// For a static grid system, just set a fixed value for the container (e.g: 960px).
$total-width = 100%

// 3 - Responsiveness?
$use-responsive = true

// 4 - Would you like to use experimental and legacy browser support?
$legacy-support = false
$experimental-support = false

// 5 - Choose a type of button - Accepted values: "flat", "simple", "shiny" "glass", "matte"
$btn-type = "flat"

// 6 - Use animations?
$use-animations = true



///////////////////////////////////////////////////////////////////////////////////////
//
// GRID SYSTEM CONFIGURATION
//
///////////////////////////////////////////////////////////////////////////////////////

// Set the number of columns, column and gutter widths
$column-width = 60px
$gutter-width = 20px
$columns = 12

// Use max-width for your container (only for fluid grid system)
$use-max-width = false
$max-width = 960px

// Set your max-width value
// Use padding-left and padding-right on your container
$use-container-gutter = false
$container-gutter = 20px

// Set a custom value for the padding
// Enable sub-pixel fix for IE6 & 7.
// Set $legacy-support to TRUE on _defaults.scss
// See http://tylertate.com/blog/2012/01/05/subpixel-rounding.html
$min-width = 999999
$correction = 0.5 / $min-width * 100

// Use the offset options in your grid - push, pull, squish and centered
$use-grid-offset = false

// Set your helper classes
$class-container = "container"
$class-row = "row"
$class-column = "span"
$class-push = "push"
$class-pull = "pull"
$class-squish = "squish"

// Set your breakpoints
$tvscreen = 1921px
$desktop = 1920px
$tablet = 768px
$mobile = 767px



///////////////////////////////////////////////////////////////////////////////////////
//
// HELPERS - Which helpers would you like to use?
//
///////////////////////////////////////////////////////////////////////////////////////

// Important
// You can also use the "_custom.scss" file to include your own helpers classes
// By doing this, i think its more apropieta disable all the following helpers

$use-global = false
$use-types = false
$use-links = false
$use-lists = false
$use-tables = false
$use-images = false
$use-forms = true
$use-inputs = true
$use-buttons = true



///////////////////////////////////////////////////////////////////////////////////////
//
// EXTENDED FEATURES
//
///////////////////////////////////////////////////////////////////////////////////////

// Font Icons
// ----------------------------------------------------------------
// Use Icomoon generator for custom icons at:
// http://icomoon.io/app/#/select
// ----------------------------------------------------------------

// Would you like to use Font Icons?
$use-icons = true

// Path for font-icons
$font-path = "../fonts"

// Change font name to yours
$font-name = "iconname"

// Would you like to use icon sizes?
$icons-sizes = false

// Would you like to use alternative states?
$icons-states = false

// Set border radius
$icons-radius = 4px

// Colors
$icon-border = #e3e3e3
$icon-muted = #e3e3e3
$icon-light = #eeeeee
$icon-dark = #333333



///////////////////////////////////////////////////////////////////////////////////////
//
// SUPPORT - Legacy and Experimental Browser Support
//
///////////////////////////////////////////////////////////////////////////////////////

$legacy-support-for-ie                  = $legacy-support
$legacy-support-for-ie6                 = $legacy-support
$legacy-support-for-ie7                 = $legacy-support
$legacy-support-for-ie8                 = $legacy-support
$legacy-support-for-mozilla             = $legacy-support
$experimental-support-for-mozilla       = $experimental-support
$experimental-support-for-webkit        = $experimental-support
$experimental-support-for-opera         = $experimental-support
$experimental-support-for-microsoft     = $experimental-support
$experimental-support-for-khtml         = $experimental-support
$experimental-support-for-svg           = $experimental-support
$experimental-support-for-pie           = $experimental-support
$experimental-support-for-gradients     = $experimental-support
