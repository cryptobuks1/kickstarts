// Colors
// -------------------------

// Grays
$black:                 #000000                 !default;
$gray:                  #555555                 !default;
$white:                 #ffffff                 !default;
$gray-dark:             #333333                 !default;
$gray-light:            #bbbbbb                 !default;
$gray-darker:           #222222                 !default;
$gray-lighter:          #eeeeee                 !default;

// Common Colors
$blue:                  #0064cd                 !default;
$green:                 #3ca838                 !default;
$red:                   #e72727                 !default;
$yellow:                #ff9a1f                 !default;
$orange:                #e64919                 !default;
$pink:                  #c3325f                 !default;
$purple:                #834186                 !default;

// Light Colors
$blue-light:             #48a1e5                !default;
$green-light:            #8bd47d                !default;
$red-light:              #d58181                !default;
$yellow-light:           lighten($yellow, 25%)  !default;
$pink-light:             #c3325f                !default;
$purple-light:           #834186                !default;

// Dark Colors
$blue-dark:              darken($blue, 10%)     !default;
$yellow-dark:            darken($yellow, 10%)   !default;
$red-dark:               darken($red, 10%)      !default;
$green-dark:             #2a7a1a                !default;
$purple-dark:            #371849                !default;


// Scaffolding
// -------------------------
$background-color:      $white      !default;
$text-color:            $gray-dark  !default;


// Links
// -------------------------
$link-color:            $blue                       !default;
$link-color-hover:      darken($link-color, 15%)    !default;
$link-color-focus:      darken($link-color, 15%)    !default;
$link-color-active:     darken($link-color, 15%)    !default;
$link-color-visited:    $link-color                 !default;


// Typography
// -------------------------
$sans-font-family:        "Helvetica Neue", Helvetica, Arial, sans-serif;
$serif-font-family:       Georgia, "Times New Roman", Times, serif;
$mono-font-family:        Monaco, Menlo, Consolas, "Courier New", monospace;

// Uncomment to set a custom font-family
$custom-font-family:      "Open Sans", sans-serif;


$base-font-family:        $custom-font-family   !default;
$base-font-size:          14px                  !default;
$base-line-height:        20px                  !default;
$alt-font-family:         $serif-font-family    !default;

$headings-font-family:    inherit   !default;
$headings-font-weight:    normal    !default;
$headings-color:          inherit   !default;

$warning-text:             darken($yellow-dark, 10%)                                        !default;
$warning-background:       $yellow-light                                                    !default;
$warning-border:           darken(adjust-hue($warning-background, -10), 3%)                 !default;

$error-text:               $red-dark                                                        !default;
$error-background:         lighten($red-light, 15%)                                         !default;
$error-border:             darken(adjust-hue($error-background, -10), 3%)                   !default;

$success-text:             $green-dark                                                      !default;
$success-background:       lighten($green-light, 14%)                                       !default;
$success-border:           darken(adjust-hue($success-background, -10), 5%)                 !default;

$info-text:                $blue-dark                                                       !default;
$info-background:          lighten($blue-light, 28%)                                        !default;
$info-border:              darken(adjust-hue($info-background, -10), 7%)                    !default;


// Component sizing
// -------------------------
$font-size-large:         $base-font-size * 1.25; // ~18px
$font-size-small:         $base-font-size * 0.85; // ~12px
$font-size-mini:          $base-font-size * 0.75; // ~11px

$padding-large:           11px 19px !default; // 44px
$padding-small:           2px 10px  !default; // 26px
$padding-mini:            0px 6px   !default; // 22px

$base-border-radius:      5px !default;
$border-radius-large:     8px !default;
$border-radius-small:     3px !default;


// Tables
// -------------------------
$table-background:               transparent                !default; // overall background-color
$table-background-accent:        #f9f9f9                    !default; // for striping
$table-background-hover:         #f5f5f5                    !default; // for hover
$table-border:                   #ddd                       !default; // table and cell border


// Forms
// -------------------------
$input-background:               $white                     !default;
$input-border:                   $gray-light                !default;
$input-border-hover:             darken($blue-light, 10%)   !default;
$input-border-radius:            $base-border-radius        !default;
$input-disabled-background:      $gray-lighter              !default;
$form-actions-background:        #f5f5f5                    !default;
$placeholder-text:               $gray-light                !default;
$input-height:                   $base-line-height + 10px   !default;


// Misc
// -------------------------
$hr-border:                      $gray-lighter              !default;
$horizontal-component-offset:    180px                      !default;
