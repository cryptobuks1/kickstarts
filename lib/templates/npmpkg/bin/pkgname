#!/usr/bin/env node

'use strict';

// Init Config
var log   = require('simlog'),
    help  = require('simhelp'),
    pkg   = require('../package'),
    input = process.argv.slice(2),
    isH   = process.argv.indexOf('-h') !== -1 || process.argv.indexOf('--help') !== -1,
    isV   = process.argv.indexOf('-v') !== -1 || process.argv.indexOf('--version') !== -1;

// Program Information
var pnm   = pkg.name,
    ver   = pkg.version,
    desc  = pkg.description,
    aut   = pkg.author.name,
    lic   = pkg.license,
    repo  = pkg.repo;

// CLI
if (isH) {
    help
        .main(pnm, ver, desc)
        // .option('r', 'run', 'run your application')
        .details(repo, aut, lic);
}

if (isV) {
    return console.log('Package version: %s', ver);
}

if (input.length > 0) {
    if (true) {
        log.success('File generate successfully!');
    } else {
        log.error('Error!');
    }
}
